{
  "name": "mcp-apps-testing",
  "version": "0.2.0",
  "description": "A professional framework for testing Model Context Protocol (MCP) UI applications with Playwright",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "lint": "tsc --noEmit",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "testing",
    "playwright",
    "ui-testing",
    "json-rpc"
  ],
  "author": "Aviv Eldan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aviveldan/mcp-apps-testing.git"
  },
  "bugs": {
    "url": "https://github.com/aviveldan/mcp-apps-testing/issues"
  },
  "homepage": "https://github.com/aviveldan/mcp-apps-testing#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {},
  "peerDependencies": {
    "@playwright/test": "^1.40.0",
    "@vscode/test-electron": "^2.3.0"
  },
  "peerDependenciesMeta": {
    "@vscode/test-electron": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
